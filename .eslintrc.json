{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true,
		"amd": true,
		"jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "max-len": ["error", { "code": 200}],
        "no-console": "warn",
        "indent": ["error", 2, { "SwitchCase": 1 }],
		"global-require": "off",
		"import/no-dynamic-require": "off",
		"func-names": "off",
		"object-curly-newline": "off"
    }
}