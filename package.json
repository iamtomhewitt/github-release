{
	"name": "github-releaser",
	"version": "0.1.0",
	"description": "My custom github releaser / changelog generator / versioner.",
	"scripts": {
		"lint": "eslint --ignore-path .gitignore .",
		"lint-fix": "npm run lint -- --fix",
		"pretest": "eslint --ignore-path .gitignore .",
		"release": "standard-version",
		"start": "node index.js",
		"test": "mocha 'tests/**/*.js' --exit"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iamtomhewitt/github-releaser.git"
	},
	"author": "Tom Hewitt",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/iamtomhewitt/github-releaser/issues"
	},
	"homepage": "https://github.com/iamtomhewitt/github-releaser#readme",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-node": "^4.1.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^2.5.1",
		"husky": "^1.1.2",
		"standard-version": "^8.0.0",
		"validate-commit-msg": "^2.14.0"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"conventional-recommended-bump": "^6.0.9"
	}
}
